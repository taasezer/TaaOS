{
    "workbench.colorTheme": "TaaOS Rosso Corsa",
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontSize": 14,
    "editor.fontFamily": "'JetBrains Mono', 'Fira Code', monospace",
    "editor.fontLigatures": true,
    "editor.lineHeight": 22,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "boundary",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.formatOnSave": true,
    "workbench.colorCustomizations": {
        "[TaaOS Rosso Corsa]": {
            "activityBar.background": "#D40000",
            "activityBar.foreground": "#F5F5F0",
            "activityBar.inactiveForeground": "#E8E8DD",
            "activityBarBadge.background": "#FF3333",
            "activityBarBadge.foreground": "#F5F5F0",
            "statusBar.background": "#D40000",
            "statusBar.foreground": "#F5F5F0",
            "statusBar.noFolderBackground": "#8B0000",
            "statusBarItem.hoverBackground": "#FF3333",
            "titleBar.activeBackground": "#0A0A0A",
            "titleBar.activeForeground": "#F5F5F0",
            "titleBar.inactiveBackground": "#1A1A1A",
            "titleBar.inactiveForeground": "#808080",
            "editor.background": "#0A0A0A",
            "editor.foreground": "#F5F5F0",
            "editor.lineHighlightBackground": "#1A1A1A",
            "editorLineNumber.foreground": "#808080",
            "editorLineNumber.activeForeground": "#D40000",
            "editorCursor.foreground": "#D40000",
            "editor.selectionBackground": "#2B2B2B",
            "editor.selectionHighlightBackground": "#3F3F3F",
            "sideBar.background": "#0D0D0D",
            "sideBar.foreground": "#F5F5F0",
            "sideBarSectionHeader.background": "#1A1A1A",
            "sideBarSectionHeader.foreground": "#D40000",
            "list.activeSelectionBackground": "#D40000",
            "list.activeSelectionForeground": "#F5F5F0",
            "list.inactiveSelectionBackground": "#2B2B2B",
            "list.hoverBackground": "#1A1A1A",
            "terminal.background": "#0A0A0A",
            "terminal.foreground": "#F5F5F0",
            "terminal.ansiRed": "#D40000",
            "terminal.ansiBrightRed": "#FF3333",
            "terminal.ansiGreen": "#00CC66",
            "terminal.ansiYellow": "#FFA500",
            "terminal.ansiBlue": "#4A90E2",
            "terminal.ansiMagenta": "#D40000",
            "terminal.ansiCyan": "#4A90E2",
            "terminal.ansiWhite": "#F5F5F0",
            "panel.background": "#0A0A0A",
            "panel.border": "#2B2B2B",
            "panelTitle.activeBorder": "#D40000",
            "panelTitle.activeForeground": "#F5F5F0",
            "panelTitle.inactiveForeground": "#808080",
            "tab.activeBackground": "#0A0A0A",
            "tab.activeForeground": "#D40000",
            "tab.inactiveBackground": "#1A1A1A",
            "tab.inactiveForeground": "#808080",
            "tab.border": "#2B2B2B",
            "editorGroup.border": "#2B2B2B",
            "editorGroupHeader.tabsBackground": "#0D0D0D",
            "button.background": "#D40000",
            "button.foreground": "#F5F5F0",
            "button.hoverBackground": "#FF3333",
            "input.background": "#1A1A1A",
            "input.foreground": "#F5F5F0",
            "input.border": "#2B2B2B",
            "inputOption.activeBorder": "#D40000",
            "dropdown.background": "#1A1A1A",
            "dropdown.foreground": "#F5F5F0",
            "dropdown.border": "#2B2B2B"
        }
    },
    "terminal.integrated.fontFamily": "'JetBrains Mono', monospace",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "git.autofetch": true,
    "git.confirmSync": false,
    "extensions.autoUpdate": true,
    // Language-specific settings
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer"
    },
    "[go]": {
        "editor.formatOnSave": true
    },
    // Developer optimizations
    "search.exclude": {
        "**/node_modules": true,
        "**/target": true,
        "**/.git": true,
        "**/dist": true,
        "**/build": true,
        "**/__pycache__": true
    },
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/target/**": true,
        "**/.git/**": true
    }
}