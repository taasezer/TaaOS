#!/usr/bin/env python3
"""
TaaOS Network Manager
Advanced network configuration (WiFi, Ethernet, VPN, Bridge, Bond)
"""

import sys
from PyQt5.QtWidgets import *
from PyQt5.QtCore import Qt

COLORS = {'primary': '#D40000', 'background': '#0A0A0A', 'surface': '#1A1A1A', 'text': '#F5F5F0'}

class NetworkManager(QMainWindow):
    def __init__(self):
        super().__init__()
        self.setWindowTitle("TaaOS Network Manager")
        self.setGeometry(100, 100, 900, 600)
        
        self.setup_ui()
        self.apply_theme()
    
    def setup_ui(self):
        central = QWidget()
        self.setCentralWidget(central)
        layout = QVBoxLayout(central)
        
        header = QLabel("üåê Network Connections")
        header.setStyleSheet(f"font-size: 24px; color: {COLORS['primary']}; font-weight: bold; padding: 20px;")
        layout.addWidget(header)
        
        # Connections List
        self.conn_list = QListWidget()
        self.conn_list.addItems([
            "Wired Connection 1 (Ethernet) - Connected",
            "TaaOS_WiFi_5G (WiFi) - Saved",
            "Office_VPN (WireGuard) - Disconnected",
            "Docker Bridge (Bridge) - Active"
        ])
        layout.addWidget(self.conn_list)
        
        # Buttons
        btn_layout = QHBoxLayout()
        for label in ["‚ûï Add", "‚úèÔ∏è Edit", "üóëÔ∏è Delete", "üîå Connect/Disconnect"]:
            btn_layout.addWidget(QPushButton(label))
        layout.addLayout(btn_layout)
        
        # Details
        details_group = QGroupBox("Connection Details")
        d_layout = QFormLayout(details_group)
        d_layout.addRow("IP Address:", QLabel("192.168.1.105 / 24"))
        d_layout.addRow("Gateway:", QLabel("192.168.1.1"))
        d_layout.addRow("DNS:", QLabel("1.1.1.1, 8.8.8.8"))
        d_layout.addRow("MAC Address:", QLabel("AA:BB:CC:DD:EE:FF"))
        d_layout.addRow("Speed:", QLabel("1000 Mb/s"))
        layout.addWidget(details_group)
        
    def apply_theme(self):
        self.setStyleSheet(f"""
            QMainWindow {{ background-color: {COLORS['background']}; }}
            QWidget {{ background-color: {COLORS['surface']}; color: {COLORS['text']}; }}
            QPushButton {{
                background-color: {COLORS['primary']};
                color: {COLORS['text']};
                border: none;
                padding: 8px 15px;
                border-radius: 5px;
                font-weight: bold;
            }}
            QPushButton:hover {{ background-color: #FF3333; }}
            QListWidget {{
                border: 2px solid #2B2B2B;
                border-radius: 5px;
            }}
            QGroupBox {{
                border: 2px solid #2B2B2B;
                border-radius: 5px;
                margin-top: 15px;
                padding-top: 15px;
            }}
            QGroupBox::title {{
                subcontrol-origin: margin;
                left: 10px;
                padding: 0 5px;
            }}
        """)

if __name__ == '__main__':
    app = QApplication(sys.argv)
    window = NetworkManager()
    window.show()
    sys.exit(app.exec_())
